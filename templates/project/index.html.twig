{% extends 'template.html.twig' %}

{% block title %}Les projets{% endblock %}

{% block main %}
    <h1 class="text-center">Mes projets</h1>

        {% for project in projects %}
                <div class="card my-2">
                    <div class="card-header bg-info text-dark">
                      <p class="text-center display-4"> {{ project.title }} </p>
                      <p> Créé le : {{ project.creationDate | date("d/m/Y")}} à {{ project.creationDate | date('H:i:s') }} </p>
                    </div>
                    <div class="card-body bg-light text-dark">
                        <h5 class="card-title">{{ project.content }}</h5>
                        <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-success text-dark mx-2 my-2 font-weight-bold">Voir le projet</a>
                        <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-success text-dark font-weight-bold">Modifier le projet</a>
                        {{ include('project/_delete_form.html.twig') }}
                    </div>
                    <div class="bg-info font-weight-bold">
                        <p class="float-left text-warning mx-2">Projet à finir avant le : {{ project.deadline | date("d/m/Y")}} à {{ project.deadline | date('H:i') }} </p>
                    </div>
                </div>

        {% else %}

               <p>Aucun projet à montrer </p>

        {% endfor %}
    <a href="{{ path('project_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
